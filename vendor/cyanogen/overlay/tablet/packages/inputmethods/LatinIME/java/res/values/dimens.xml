<resources>
    <!-- key_height + key_bottom_gap = popup_key_height -->
    <dimen name="key_height">60dip</dimen>
    <dimen name="key_bottom_gap">6dip</dimen>
    <dimen name="popup_key_height">60dip</dimen>
    <dimen name="keyboard_bottom_padding">10dip</dimen>
    <!-- If the screen height in landscape is larger than the below value, then the keyboard
         will not go into extract (fullscreen) mode. -->
    <dimen name="max_height_for_fullscreen">400dip</dimen>
    <dimen name="key_text_size">21dip</dimen>
    <dimen name="key_label_text_size">13dip</dimen>
    <!-- Amount of allowance for selecting keys in a mini popup keyboard by sliding finger. -->
    <!-- popup_key_height x 1.7 -->
    <dimen name="mini_keyboard_slide_allowance">88.5dip</dimen>
    <!-- popup_key_height x 1.0 -->
    <dimen name="mini_keyboard_vertical_correction">-52dip</dimen>
    <dimen name="key_hysteresis_distance">80dip</dimen>
    <!-- We use "inch", not "dip" because this value tries dealing with physical distance related
         to user's finger. -->
    <dimen name="keyboard_vertical_correction">-8dip</dimen>
    <dimen name="candidate_min_touchable_width">48dip</dimen>
</resources>
